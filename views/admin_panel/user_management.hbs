<main role="main" class="col">
    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">ZARZĄDZANIE KONTAMI</h1>
    </div>

    <div class="admin-width-container" style="background-color:#eeeeee; padding: 5px; color:black; margin-top:1.3vw">
        {{!-- tabelka --}}
        <div class="admin-width-container">
            <h4 style="margin-top: 1vw; margin-bottom: 1.5vw">LISTA UŻYTKOWNIKÓW</h4>
            <form action="/administrator_panel/user_management" method="post">
                <div class="row">
                    <div class="col">
                        <p>Szukaj:</p>
                        <input class="form-control admin-filter" type="text" placeholder="Szukaj" name="nameSearch"
                            aria-label="Search">
                    </div>
                    <div class="col">
                        <p>Parametry:</p>
                        <select name="active" id="" class="custom-select">
                            <option value="1">tylko aktywni</option>
                            <option value="0">tylko nieaktywni</option>
                            <option value="3">tylko usunięci</option>
                            <option value="2">tylko zbanowani</option>
                        </select>
                    </div>
                    <div class="col">
                        <p>Sortowanie według:</p>
                        <select name="sortUsing" id="" class="custom-select">
                            <option value="nickname">pseudonim</option>
                            <option value="ID">ID</option>
                            <option value="email">e-mail</option>
                            <option value="lastLogin">ostatnie logowanie</option>
                        </select>
                    </div>
                    <div class="col">
                        <p>Sortowanie typ:</p>
                        <select name="sortType" id="" class="custom-select">
                            <option value="asc">rosnąco</option>
                            <option value="desc">malejąco</option>
                        </select>
                    </div>
                    <div class="col">
                        <p>&nbsp;</p>
                        <button type="submit" class="btn btn-success ml-3 float-right rounded-0"
                            style="color:black; background-color:#27AE60; width: 7vw; ">SZUKAJ</button>
                    </div>
                </div>
            </form>
            <p>&nbsp</p>



            <div class="table-responsive">
                <table class="table table-striped table-sm table-hover">
                    <thead>
                        <tr>
                            <th>
                                <p>&nbsp</p>
                                <p>ID</p>
                            </th>
                            <th>
                                <p>&nbsp</p>
                                <p>STATUS</p>
                            </th>
                            <th>
                                <p>&nbsp</p>
                                <p>PSEUDONIM</p>
                            </th>
                            <th>
                                <p>&nbsp</p>
                                <p>ADRES E-MAIL</p>
                            </th>
                            <th>
                                <p style="padding: 0; margin: 0">OSTATNIA</p>
                                <p>AKTYWNOŚĆ</p>
                            </th>
                            <th>
                                <p>&nbsp</p>
                                <p>DZIAŁANIA</p>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each userInfo}}
                        <tr>
                            <td class="align-middle">{{id_user}}</td>
                            <td class="align-middle">{{state}}</td>
                            <td class="align-middle">{{nickname}}</td>
                            <td class="align-middle">{{email_address}}</td>
                            <td class="align-middle">{{date_of_activity}}</td>
                            <td>
                                <div class="row" style="margin-right:0.2vw; margin-top:0.2vw">
                                    <div class="col-5">
                                        <button type="button"
                                            onclick="location.href='/administrator_panel/user_management/{{nickname}}'"
                                            class="btn btn-secondary btn-block rounded-0"
                                            style="font-size:0.7vw">SZCZEGÓŁY</button>
                                    </div>
                                    <div class="col-5">
                                        <button type="submit" onclick="location.href='/users/user_recipes/{{nickname}}'"
                                            class="btn btn-success btn-block rounded-0" style="font-size:0.7vw">PRZEPISY
                                            UŻYTKOWNIKA</button>
                                    </div>
                                </div>
                                <div class="row" style="margin-top: 0.2vw; margin-right:0.2vw; margin-bottom: 0.2vw">
                                    <div class="col-5">
                                        <button type="button" class="btn btn-secondary btn-block rounded-0"
                                            style="font-size:0.7vw" data-toggle="modal"
                                            data-target="#exampleModalLong">WYŚLIJ
                                            WIADOMOŚĆ</button>

                                        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLongTitle">Wyślij
                                                            wiadomość
                                                        </h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body text-justify">
                                                        <textarea name="userMessage" id="userMessage_{{email_address}}"
                                                            cols="45" rows="10"></textarea>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="submit" class="btn btn-danger"
                                                            onclick="sendMail('{{email_address}}')">Wyślij</button>
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">Zamknij</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-5">

                                        <button type="button" class="btn btn-danger btn-block rounded-0"
                                            style="font-size:0.7vw" data-toggle="modal"
                                            data-target="#banUserModal">ZABLOKUJ
                                            KONTO</button>

                                        <div class="modal fade" id="banUserModal" tabindex="-1" role="dialog"
                                            aria-labelledby="banUserModalTitle" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="banUserModalTitle">Zablokuj
                                                            użytkownika
                                                        </h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body text-justify">
                                                        <p>
                                                            Po wykonaniu tej akcji użytkownik zostanie zablokowany, a jego przepisy staną się 'anonimowe'.
                                                        </p>
                                                        <p>
                                                            Czy na pewno chcesz zablokować tego użytkownika?
                                                        </p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="submit" class="btn btn-danger"
                                                            onclick="blockUser('{{nickname}}')">Zablokuj</button>
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">Zamknij</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</main>

<script src="/javascripts/sendEmail.js"></script>