<div class="container" id="listOfRecipes">
    <h3 class="mb-5" style="text-transform: uppercase">Wyszukano: <span>{{searchString}}</span></h3>
    {{#each recipes}}
    <div class="row align-items-center mt-2">
        <div class="col-6 col-md-4">
            <img src="{{photo}}" alt="" class="card-img-top">
        </div>
        <div class="col-6 col-4">
            <h3>{{recipe_name}}</h3>
            <div class="container" style="background-color:gainsboro">
                <p>Stopien trudności: {{complicity}}</p>
                <p>Czas przygotowania: {{preparation_time}}</p>
                <p>Ilość porcji: {{number_of_people}}</p>
                <p>Ocena: {{score}}</p>
                <!-- ajax to show categories -->
            </div>
        </div>
    </div>
    {{/each}}
</div>