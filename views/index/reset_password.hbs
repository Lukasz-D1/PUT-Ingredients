<div class="container mt-5 text-center">
    <form action="/reset_password/{{url}}" method="POST" novalidate>
                <div class="form-group d-flex justify-content-center mt-4">
            <input type="password" name="password" id="passwordForm1"
                class="form-control w-25 border-top-0 border-left-0 border-right-0 rounded-0" placeholder="Hasło"
                minlength="8" pattern="(?=^.{8,}$)(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&amp;*()_+}{&quot;:;'?/&gt;.&lt;,])(?!.*\s).*$" required>
        </div>
        <div class="form-group d-flex justify-content-center mt-4">
            <input type="password" name="passwordConfirm" id="passwordForm2"
                class="form-control w-25 border-top-0 border-left-0 border-right-0 rounded-0"
                placeholder="Potwierdź hasło" required>
        </div>
        <button type="submit" class="btn btn-success ml-3" style="color:black; background-color:#27AE60;margin-top: 3%">Zmień hasło</button>
    </form>
</div>
<script src="/javascripts/forgotPasswordHandler.js"></script>